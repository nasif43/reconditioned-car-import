<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cse213.reconditionedcarimporter.InventoryAndQuality.QualityInspectorDashboardController"
            prefHeight="400.0" prefWidth="600.0">
    <BorderPane>
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Generate Report" />
                <MenuItem text="Logout" />
            </Menu>
            <Menu text="Tools">
                <MenuItem text="Create Repair Plan" />
                <MenuItem text="Request Parts" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">
            <!-- Left: Inspection Queue -->
            <VBox spacing="5">
                <Label text="Pending Inspections" style="-fx-font-weight: bold;"/>
                <TableView>
                    <columns>
                        <TableColumn text="VIN" />
                        <TableColumn text="Make" />
                        <TableColumn text="Status" />
                    </columns>
                </TableView>
                <Button text="Start Inspection" />
            </VBox>

            <!-- Right: Inspection Details -->
            <VBox spacing="10" padding="10">
                <GridPane hgap="10" vgap="5">
                    <Label text="Exterior Rating:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Interior Rating:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Defects Found:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ListView GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>

                <Button text="Submit Report"  />
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" padding="5">
            <Label text="Active Repair Plans:" />
            <ListView  prefWidth="200" />
        </HBox>
    </bottom>
    </BorderPane>
</AnchorPane>
